#!/usr/bin/env perl

# `digerementa sic ... cis lista` makes `sort ({...}, @list)` instead of
# `sort {...} @list`, so a wrapper function is needed to sort properly
sub dispon {
	$func = shift;
	$arr = shift;
	sort { &$func($a, $b) } @$arr
}

